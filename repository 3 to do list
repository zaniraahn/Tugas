import json
import os
from datetime import datetime

class ToDoList:
    def __init__(self, filename="todo_list.json"):
        self.filename = filename
        self.tasks = self.load_tasks()
    
    def load_tasks(self):
        """Memuat data tugas dari file JSON"""
        if os.path.exists(self.filename):
            with open(self.filename, 'r', encoding='utf-8') as f:
                return json.load(f)
        return []
    
    def save_tasks(self):
        """Menyimpan data tugas ke file JSON"""
        with open(self.filename, 'w', encoding='utf-8') as f:
            json.dump(self.tasks, f, indent=2, ensure_ascii=False)
    
    def add_task(self, description):
        """Menambah tugas baru"""
        task = {
            "id": len(self.tasks) + 1,
            "description": description,
            "status": "Belum Selesai",
            "created_at": datetime.now().strftime("%Y-%m-%d %H:%M:%S")
        }
        self.tasks.append(task)
        self.save_tasks()
        print(f"✓ Tugas '{description}' berhasil ditambahkan!")
    
    def view_tasks(self):
        """Menampilkan semua tugas"""
        if not self.tasks:
            print("Tidak ada tugas tersimpan.")
            return
        
        print("\n" + "="*60)
        print("DAFTAR TUGAS")
        print("="*60)
        for task in self.tasks:
            status_icon = "✓" if task["status"] == "Selesai" else "○"
            print(f"\nID: {task['id']}")
            print(f"Tugas: {task['description']}")
            print(f"Status: {status_icon} {task['status']}")
            print(f"Dibuat: {task['created_at']}")
        print("="*60 + "\n")
    
    def edit_task(self, task_id, new_description):
        """Mengedit deskripsi tugas"""
        for task in self.tasks:
            if task["id"] == task_id:
                task["description"] = new_description
                self.save_tasks()
                print(f"✓ Tugas ID {task_id} berhasil diperbarui!")
                return
        print(f"✗ Tugas dengan ID {task_id} tidak ditemukan.")
    
    def update_status(self, task_id, status):
        """Memperbarui status tugas"""
        if status not in ["Selesai", "Belum Selesai"]:
            print("Status harus 'Selesai' atau 'Belum Selesai'")
            return
        
        for task in self.tasks:
            if task["id"] == task_id:
                task["status"] = status
                self.save_tasks()
                print(f"✓ Status tugas ID {task_id} diperbarui menjadi '{status}'!")
                return
        print(f"✗ Tugas dengan ID {task_id} tidak ditemukan.")
    
    def delete_task(self, task_id):
        """Menghapus tugas"""
        for i, task in enumerate(self.tasks):
            if task["id"] == task_id:
                deleted = self.tasks.pop(i)
                self.save_tasks()
                print(f"✓ Tugas '{deleted['description']}' berhasil dihapus!")
                return
        print(f"✗ Tugas dengan ID {task_id} tidak ditemukan.")

def main():
    todo = ToDoList()
    
    while True:
        print("\n" + "="*40)
        print("MENU TO DO LIST")
        print("="*40)
        print("1. Lihat semua tugas")
        print("2. Tambah tugas baru")
        print("3. Edit tugas")
        print("4. Ubah status tugas")
        print("5. Hapus tugas")
        print("6. Keluar")
        print("="*40)
        
        pilihan = input("Pilih menu (1-6): ").strip()
        
        if pilihan == "1":
            todo.view_tasks()
        
        elif pilihan == "2":
            desc = input("Masukkan deskripsi tugas: ").strip()
            if desc:
                todo.add_task(desc)
            else:
                print("✗ Deskripsi tidak boleh kosong!")
        
        elif pilihan == "3":
            todo.view_tasks()
            try:
                task_id = int(input("Masukkan ID tugas yang ingin diedit: "))
                new_desc = input("Masukkan deskripsi baru: ").strip()
                if new_desc:
                    todo.edit_task(task_id, new_desc)
                else:
                    print("✗ Deskripsi tidak boleh kosong!")
            except ValueError:
                print("✗ ID harus berupa angka!")
        
        elif pilihan == "4":
            todo.view_tasks()
            try:
                task_id = int(input("Masukkan ID tugas: "))
                print("1. Selesai")
                print("2. Belum Selesai")
                status_choice = input("Pilih status (1-2): ").strip()
                status = "Selesai" if status_choice == "1" else "Belum Selesai"
                todo.update_status(task_id, status)
            except ValueError:
                print("✗ Input tidak valid!")
        
        elif pilihan == "5":
            todo.view_tasks()
            try:
                task_id = int(input("Masukkan ID tugas yang ingin dihapus: "))
                todo.delete_task(task_id)
            except ValueError:
                print("✗ ID harus berupa angka!")
        
        elif pilihan == "6":
            print("Terima kasih! Sampai jumpa.")
            break
        
        else:
            print("✗ Pilihan tidak valid!")

if __name__ == "__main__":
    main()