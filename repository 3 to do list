import json
import os
from datetime import datetime

# Emoji constants â€” tema bunga (rapi & konsisten)
EMOJI = {
    'flower_border': 'ğŸŒ¸',
    'flower_header': 'ğŸŒº',
    'added': 'ğŸŒ·',
    'done': 'ğŸŒ»',
    'pending': 'ğŸŒ¼',
    'add': 'â•',
    'edit': 'âœï¸',
    'delete': 'ğŸ—‘ï¸',
    'stats': 'ğŸ“Š',
    'error': 'â—',
    'success': 'âœ…',
    'warning': 'âš ï¸',
} 
class ToDoList:
    def __init__(self, filename=None):
        # simpan file data di folder skrip agar behavior konsisten saat dijalankan dari cwd lain
        if filename is None:
            filename = os.path.join(os.path.dirname(__file__), "todo_list.json")
        self.filename = filename
        self.tasks = self.load_tasks()
    
    def load_tasks(self):
        """Memuat data tugas dari file JSON"""
        if os.path.exists(self.filename):
            try:
                with open(self.filename, 'r', encoding='utf-8') as f:
                    return json.load(f)
            except json.JSONDecodeError:
                # file rusak/corrupt â€” buat cadangan dan mulai dari kosong
                bak = self.filename + '.bak'
                os.replace(self.filename, bak)
                print(f"âš ï¸  File data korup â€” dipindah ke {bak}. Memulai database kosong.")
                return []
        return []
    
    def save_tasks(self):
        """Menyimpan data tugas ke file JSON"""
        with open(self.filename, 'w', encoding='utf-8') as f:
            json.dump(self.tasks, f, indent=2, ensure_ascii=False)
    
    def add_task(self, description):
        """Menambah tugas baru"""
        next_id = max((t.get('id', 0) for t in self.tasks), default=0) + 1
        task = {
            "id": next_id,
            "description": description,
            "status": "Belum Selesai",
            "created_at": datetime.now().strftime("%Y-%m-%d %H:%M:%S")
        }
        self.tasks.append(task)
        self.save_tasks()
        print(f"{EMOJI['added']}{EMOJI['success']} Tugas '{description}' berhasil ditambahkan! {EMOJI['flower_border']}")
    
    def view_tasks(self):
        """Menampilkan semua tugas"""
        if not self.tasks:
            print("ğŸŒ¸ Belum ada tugas â€” tambahkan yang indah! ğŸŒ¸")
            return
        
        print("\n" + EMOJI['flower_border'] * 12)
        print(f"{EMOJI['flower_header']}  DAFTAR TUGAS â€” Rapi & Terorganisir {EMOJI['flower_border']}")
        print(EMOJI['flower_border'] * 12)
        for task in self.tasks:
            status_icon = EMOJI['done'] if task["status"] == "Selesai" else EMOJI['pending']
            print(f"\nID: {task['id']}")
            print(f"Tugas: {task['description']}")
            print(f"Status: {status_icon} {task['status']}")
            print(f"Dibuat: {task['created_at']}")
        print(EMOJI['flower_border'] * 12 + "\n")
    
    def get_statistics(self):
        """Menampilkan statistik tugas"""
        if not self.tasks:
            return
        
        total = len(self.tasks)
        completed = sum(1 for t in self.tasks if t["status"] == "Selesai")
        pending = total - completed
        
        print(f"\nğŸ“Š STATISTIK:")
        print(f"Total tugas: {total}")
        print(f"Selesai: {completed}")
        print(f"Belum selesai: {pending}")
    
    def edit_task(self, task_id, new_description):
        """Mengedit deskripsi tugas"""
        for task in self.tasks:
            if task["id"] == task_id:
                task["description"] = new_description
                self.save_tasks()
                print(f"âœï¸âœ… Tugas ID {task_id} berhasil diperbarui! ğŸ‰")
                return
        print(f"âš ï¸âœ— Tugas dengan ID {task_id} tidak ditemukan. ğŸ˜¿")
    
    def update_status(self, task_id, status):
        """Memperbarui status tugas"""
        if status not in ["Selesai", "Belum Selesai"]:
            print("Status harus 'Selesai' atau 'Belum Selesai'")
            return
        
        for task in self.tasks:
            if task["id"] == task_id:
                task["status"] = status
                self.save_tasks()
                print(f"ğŸ”âœ… Status tugas ID {task_id} diperbarui menjadi '{status}'! ğŸ¯")
                return
        print(f"âš ï¸âœ— Tugas dengan ID {task_id} tidak ditemukan. ğŸ˜¿")
    
    def delete_task(self, task_id):
        """Menghapus tugas"""
        for i, task in enumerate(self.tasks):
            if task["id"] == task_id:
                deleted = self.tasks.pop(i)
                self.save_tasks()
                print(f"ğŸ—‘ï¸âœ… Tugas '{deleted['description']}' berhasil dihapus! ğŸ˜¿")
                return
        print(f"âš ï¸âœ— Tugas dengan ID {task_id} tidak ditemukan. âŒ")

def main():
    todo = ToDoList()
    
    while True:
        print("\n" + EMOJI['flower_border'] * 12)
        print(f"{EMOJI['flower_header']}  MENU TO-DO LIST â€” Tetap rapi & tenang {EMOJI['flower_border']}")
        print(EMOJI['flower_border'] * 12)
        print(f"1. {EMOJI['added']} Lihat semua tugas")
        print(f"2. {EMOJI['add']} Tambah tugas baru")
        print(f"3. {EMOJI['edit']} Edit tugas")
        print(f"4. {EMOJI['stats']} Ubah status tugas")
        print(f"5. {EMOJI['delete']} Hapus tugas")
        print(f"6. ğŸšª Keluar")
        print(EMOJI['flower_border'] * 12)
        
        pilihan = input("Pilih menu (1-6) ğŸŒ¸: ").strip()
        
        if pilihan == "1":
            todo.view_tasks()
        
        elif pilihan == "2":
            desc = input("Masukkan deskripsi tugas ğŸŒ·: ").strip()
            if desc:
                todo.add_task(desc)
            else:
                print(f"{EMOJI['warning']}{EMOJI['flower_border']} Deskripsi tidak boleh kosong!")
        
        elif pilihan == "3":
            todo.view_tasks()
            try:
                task_id = int(input("Masukkan ID tugas yang ingin diedit: "))
                new_desc = input("Masukkan deskripsi baru: ").strip()
                if new_desc:
                    todo.edit_task(task_id, new_desc)
                else:
                    print("âœ— Deskripsi tidak boleh kosong!")
            except ValueError:
                print("âœ— ID harus berupa angka!")
        
        elif pilihan == "4":
            todo.view_tasks()
            try:
                task_id = int(input("Masukkan ID tugas: "))
                print(f"1. {EMOJI['done']} Selesai")
                print(f"2. {EMOJI['pending']} Belum Selesai")
                status_choice = input("Pilih status (1-2) ğŸŒ¼: ").strip()
                status = "Selesai" if status_choice == "1" else "Belum Selesai"
                todo.update_status(task_id, status)
            except ValueError:
                print("âœ— Input tidak valid!")
        
        elif pilihan == "5":
            todo.view_tasks()
            try:
                task_id = int(input("Masukkan ID tugas yang ingin dihapus: "))
                todo.delete_task(task_id)
            except ValueError:
                print("âœ— ID harus berupa angka!")
        
        elif pilihan == "6":
            print("Terima kasih! Sampai jumpa.")
            break
        
        else:
            print("âš ï¸âœ— Pilihan tidak valid! Pilih angka 1â€“6. ğŸ¤”")

if __name__ == "__main__":
    main()
